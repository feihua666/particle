<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>global</artifactId>
        <groupId>com.particle</groupId>
        <version>4.0.2-beta-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>global-captcha-boot-starter</artifactId>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
    </properties>

    <dependencies>
        <!-- 为了方便引入，直接引入web编译 -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
            <scope>provided</scope>
            <exclusions>
                <!-- 排除默认的logback，使用log4j2 -->
                <exclusion>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- 验证码依赖 -->
        <dependency>
            <groupId>com.github.whvcse</groupId>
            <artifactId>easy-captcha</artifactId>
            <version>${easy-captcha.version}</version>
        </dependency>

        <dependency>
            <groupId>com.particle</groupId>
            <artifactId>global-dto</artifactId>
            <version>${particle.version}</version>
        </dependency>

        <dependency>
            <groupId>com.particle</groupId>
            <artifactId>global-swagger-boot-starter</artifactId>
            <version>${particle.version}</version>
        </dependency>

        <dependency>
            <groupId>com.particle</groupId>
            <artifactId>global-project-info-boot-starter</artifactId>
            <version>${particle.version}</version>
        </dependency>

        <!-- 添加过滤器 为安全提供验证码支持-->
        <dependency>
            <groupId>com.particle</groupId>
            <artifactId>global-security-boot-starter</artifactId>
            <version>${particle.version}</version>
        </dependency>

        <!-- 为动态验证码提供支持 -->
        <!--<dependency>-->
        <!--    <groupId>com.particle</groupId>-->
        <!--    <artifactId>global-messaging-boot-starter</artifactId>-->
        <!--    <version>${particle.version}</version>-->
        <!--</dependency>-->

        <!-- 依赖数据源,在启用多实例时，使用jdbc支持 -->
        <dependency>
            <groupId>com.particle</groupId>
            <artifactId>global-datasource-boot-starter</artifactId>
            <version>${particle.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>
