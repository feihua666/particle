<div class="news-list-widget">
    <h5 class="title">
        <span class="title-inner">${title}</span>
    </h5>
    <div class="content">
        [#list newsList as itemContent]
        <div class="media">
            [#if itemContent.imageUrl??]
            <div class="media-left">
                <a href="${site.sitePath}${itemContent.channel.channelPath}${itemContent.contentUrl}">
                    <img class="media-object" src="${itemContent.imageUrl}" data-holder-rendered="true">
                </a>
            </div>
            [/#if]
            <div class="media-body">
                <a href="${site.sitePath}${itemContent.channel.channelPath}${itemContent.contentUrl}">${itemContent.title}</a>
            </div>
        </div>
        [/#list]
    </div>

</div>
