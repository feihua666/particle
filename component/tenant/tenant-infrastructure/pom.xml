<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>tenant</artifactId>
        <groupId>com.particle</groupId>
        <version>1.0.0-beta</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>tenant-infrastructure</artifactId>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
    </properties>
    <dependencies>
        <!-- 通用基础设施 依赖 -->
        <dependency>
            <groupId>com.particle</groupId>
            <artifactId>common-infrastructure</artifactId>
            <version>${particle.version}</version>
        </dependency>
        <!-- 领域模型 依赖 -->
        <dependency>
            <groupId>com.particle</groupId>
            <artifactId>tenant-domain</artifactId>
            <version>${particle.version}</version>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.particle</groupId>
            <artifactId>func-adapter-feign-client</artifactId>
            <version>${particle.version}</version>
        </dependency>

        <!-- 查询字典使用 -->
        <dependency>
            <groupId>com.particle</groupId>
            <artifactId>dict-adapter-feign-client</artifactId>
            <version>${particle.version}</version>
        </dependency>

        <!-- 租户创建申请审核通过添加角色和用户绑定 -->
        <dependency>
            <groupId>com.particle</groupId>
            <artifactId>role-adapter-feign-client</artifactId>
            <version>${particle.version}</version>
        </dependency>

        <!-- 租户创建申请审核通过可动态添加用户 -->
        <dependency>
            <groupId>com.particle</groupId>
            <artifactId>user-adapter-feign-client</artifactId>
            <version>${particle.version}</version>
        </dependency>
        <!-- 租户创建申请审核通过可动态添加用户 仅使用枚举查询字典-->
        <dependency>
            <groupId>com.particle</groupId>
            <artifactId>user-domain</artifactId>
            <version>${particle.version}</version>
        </dependency>
    </dependencies>

</project>